{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "metadata": {
    "name": "catalog-ui-deploy-template"
  },
  "parameters": [
    {
      "name": "NAME",
      "description": "Name of the application",
      "required": true
    },
    {
      "name": "REGISTRY_URL",
      "description": "URL of the internal image registry",
      "required": true
    },
    {
      "name": "APP_HOST",
      "description": "Public route host",
      "required": true
    }
  ],
  "objects": [
    {
      "apiVersion": "apps.openshift.io/v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "name": "${NAME}"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "app": "catalog-ui"
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "catalog-ui",
              "group": "catalog"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${NAME}",
                "image": "${REGISTRY_URL}/catalog-ui:latest",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "${NAME}"
      },
      "spec": {
        "selector": {
          "app": "catalog-ui"
        },
        "ports": [
          {
            "port": 8080,
            "targetPort": 8080
          }
        ]
      }
    },
    {
      "apiVersion": "route.openshift.io/v1",
      "kind": "Route",
      "metadata": {
        "name": "${NAME}"
      },
      "spec": {
        "host": "${APP_HOST}",
        "to": {
          "kind": "Service",
          "name": "catalog-ui"
        }
      }
    }
  ]
}
