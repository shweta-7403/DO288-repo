{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "metadata": {
    "name": "catalog-ui-deploy-template"
  },
  "parameters": [
    {
      "name": "NAME",
      "description": "Name of the application",
      "required": true
    },
    {
      "name": "REGISTRY_URL",
      "description": "URL of the internal image registry (e.g. image-registry.openshift-image-registry.svc:5000/namespace)",
      "required": true
    },
    {
      "name": "APP_HOST",
      "description": "Public route host",
      "required": true
    }
  ],
  "objects": [
    {
      "apiVersion": "apps.openshift.io/v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "catalog-ui",
          "group": "catalog"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "app": "${NAME}"
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "${NAME}",
              "group": "catalog"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${NAME}",
                "image": "${REGISTRY_URL}/${NAME}:latest",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "catalog-ui",
          "group": "catalog"
        }
      },
      "spec": {
        "selector": {
          "app": "${NAME}"
        },
        "ports": [
          {
            "port": 8080,
            "targetPort": 8080
          }
        ]
      }
    },
    {
      "apiVersion": "route.openshift.io/v1",
      "kind": "Route",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "catalog-ui",
          "group": "catalog"
        }
      },
      "spec": {
        "host": "${APP_HOST}",
        "to": {
          "kind": "Service",
          "name": "${NAME}"
        },
        "port": {
          "targetPort": 8080
        }
      }
    }
  ]
}
