{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "metadata": {
    "name": "catalog-ui-build-template"
  },
  "parameters": [
    {
      "name": "NAME",
      "description": "Name of the application",
      "required": true
    }
  ],
  "objects": [
    {
      "apiVersion": "build.openshift.io/v1",
      "kind": "BuildConfig",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "catalog-ui",
          "group": "catalog"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/sclorg/nginx-ex.git"
          }
        },
        "strategy": {
          "type": "Docker"
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange"
          }
        ]
      }
    },
    {
      "apiVersion": "image.openshift.io/v1",
      "kind": "ImageStream",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "catalog-ui",
          "group": "catalog"
        }
      }
    }
  ]
}
